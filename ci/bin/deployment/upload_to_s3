#!/usr/bin/env sh
set -e -x -o pipefail

if [ -z "$S3_BUCKET" ]
then
      echo "\$S3_BUCKET is empty";
      exit 1;
fi

if [ -z "$LOCAL_BUILD_PATH" ]
then
      echo "\$LOCAL_BUILD_PATH is empty";
      exit 1;
fi

if [ -z "$LOCAL_BUILD_PATH" ]
then
      echo "\$LOCAL_BUILD_PATH is empty";
      exit 1;
fi


mc mirror "${LOCAL_BUILD_PATH}" "default/${S3_BUCKET}/${REMOTE_BUILD_PATH}/" --overwrite
