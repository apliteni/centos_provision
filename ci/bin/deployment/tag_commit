#!/usr/bin/env bash
set -e -x -o pipefail

if [ -z "$RELEASE_VERSION" ]
then
      echo "\$RELEASE_VERSION is empty";
      exit 1;
fi


if [ -z "$GIT_URL" ]
then
      echo "\$GIT_URL is empty";
      exit 1;
fi

git pull origin "${CI_COMMIT_REF_NAME}"

git tag -a v${RELEASE_VERSION} -m "v${RELEASE_VERSION}"
git push -u ${GIT_URL} --tags --push-option=ci.skip
