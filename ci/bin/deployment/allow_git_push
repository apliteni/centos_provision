#!/usr/bin/env bash
set -e -x -o pipefail

if [ -z "$SSH_DEPLOY_KEY" ]
then
      echo "\$SSH_DEPLOY_KEY is empty";
      exit 1;
fi

echo "${SSH_DEPLOY_KEY}" > "${HOME}/.ssh/id_rsa"
chmod 600 "${HOME}/.ssh/id_rsa"

git config --global user.email "bot@apliteni.com" && git config --global --replace-all user.name "Mr. Bot'
