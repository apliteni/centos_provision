#!/usr/bin/env sh
set -e -x -o pipefail

if [ -z "$S3_KEY" ]
then
      echo "\$S3_KEY is empty";
      exit 1;
fi

if [ -z "$S3_SECRET" ]
then
      echo "\$S3_SECRET is empty";
      exit 1;
fi

if [ -z "$S3_BUCKET" ]
then
      echo "\$S3_BUCKET is empty";
      exit 1;
fi

if [ -z "$S3_HOST" ]
then
      echo "\$S3_HOST is empty";
      exit 1;
fi


mc config host add default https://${S3_HOST} ${S3_KEY} ${S3_SECRET}
