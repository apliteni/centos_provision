#!/usr/bin/env bash
set -e -x -o pipefail

if [ -z "$RELEASE_VERSION" ]
then
      echo "\$RELEASE_VERSION is empty";
      exit 1;
fi


if [ -z "$GIT_URL" ]
then
      echo "\$GIT_URL is empty";
      exit 1;
fi

# Sync tags with repo
git tag -l | xargs git tag -d
git fetch --tags

# Tag current commit
git tag "${RELEASE_VERSION}"
git push origin --push-option=ci.skip --tags
