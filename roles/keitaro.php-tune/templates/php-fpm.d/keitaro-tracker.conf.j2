[keitaro]
user = keitaro
group = keitaro

listen = '/var/run/{{ php_version }}-fpm-keitaro-tracker.sock'
listen.owner = {{ nginx_user }}
listen.group = {{ nginx_group }}
listen.mode = 0660

pm = dynamic
pm.max_children = {{ php_tracker_workers_count }}
pm.start_servers = {{ php_tracker_start_workers_count }}
pm.min_spare_servers = {{ php_tracker_min_idle_workers_count }}
pm.max_spare_servers = {{ php_tracker_max_idle_workers_count }}
pm.max_requests = {{ php_tracker_worker_max_requests }}
pm.status_path = /status

php_admin_value[error_log] = /var/log/php-fpm/keitaro-tracker-error.log
php_admin_flag[log_errors] = on
