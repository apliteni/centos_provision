# Generated by Keitaro install tool v{{ installer_version }}

server {
  server_name _;

  # begin listen
  listen 80 default_server;
  # end listen

  # begin ssl
  listen 443 ssl;
  ssl_certificate {{ ssl_cert_path }};
  ssl_certificate_key {{ ssl_privkey_path }};
  ssl_session_cache   shared:SSL:10m;
  ssl_session_timeout 10m;
  ssl_prefer_server_ciphers on;
  ssl_dhparam {{ ssl_dhparam_path }};
  add_header X-Content-Type-Options nosniff;
  # end ssl

  root {{ keitaro_root }};

  access_log  /var/log/nginx/keitaro.access.log main buffer=16k flush=15s;

  index index.php index.html;

  # begin caching
  location ~* \.(jpg|jpeg|gif|png|js|css|txt|zip|ico|gz|csv)$ {
    expires 10d;
  }
  # end caching

  # begin forbid hidden files
  location ~ /\.(?!well-known).* {
    access_log off;
    log_not_found off;
    return 404;
  }
  # end forbid hidden files

  # begin forbid keitaro
  location ~* /(var|lib|application)/.*$ {
    access_log off;
    log_not_found off;
    return 404;
  }
  # end forbid keitaro

  # begin status page
  location /status {
    include {{ nginx_conf_path }}/keitaro-php.php-fpm.inc;
    allow 127.0.0.1;
    deny all;
  }
  # end status page

  # begin admin php
  # location ~ ^admin/\.php$ {
  #   include keitaro-php.conf;
  # }
  # end admin php

  # begin /admin
  # location /admin {
  #   access_log  /var/log/nginx/keitaro-admin.access.log main buffer=16k flush=15s;
  #   try_files $uri $uri/ /index.php?$args;
  # }
  # end /admin

  # begin php
  location ~ \.php$ {
    include {{ nginx_conf_path }}/keitaro-php.inc;
  }
  # end php

  # begin /
  location / {
    try_files $uri $uri/ /index.php?$args;
  }
  # end /

}
